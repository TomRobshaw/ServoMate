<h1>Garage index page<h1>
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="h2 my-3 d-flex justify-content-center">Garages near by ğŸš˜</h1>

      <div>
        <%= form_with url: garages_path, method: :get, html: {class: "mb-4", data: { turbo_frame:"search_results"}} do |f| %>
              <button class="btn btn-primary, color: white;"><%=link_to "Home", root_path(@root)%></button>
          <%= f.label "find a garage" %>
              <button type="button" class="btn btn-primary, color: white;"><%=link_to "My Vehicles", cars_path(@cars)%></button>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: {
                              controller: "auto-submit",
                              action: "keyup->auto-submit#submitForm"
                            }
                           %>
        <% end %>

        <%= turbo_frame_tag "search_results" do %>
          <%= render :partial => "garage", :collection => @garages, :as => :garage %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class style ="card" style="card-box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.15); border-radius: 4px; border-style: solid; border-width: 4px; border-style: solid; border-color: black; display: inline-flex; flex-direction: column; align-items: flex-start; justify-content: flex-start;">
  <%#= cl_image_tag garage.image.key, crop: :fill,  style: "width: 100%; height: 216px; border-radius: 8px;"%>
  <div class style ="garage-info">
    <div class="garage-content" style ="width: 100%; display: flex; flex-direction: column; align-items: flex-start; justify-content: flex-start;">
      <p class style ="width: 100%; font-size: 24px; font-weight: 600; line-height: 20px; color: black;"><%= @garages.name %></p>
      <p class style ="width: 100%; font-size: 16px; font-weight: 400; line-height: 20px; color: black;"><%#= @garage.address %></p>
      <p> <%= link_to "See More", garages_path(@garage), class: "btn btn-primary" %> </p>
    </div>
  </div>
</div>


<%# Nav bar goes here  %>
<div class="container">
  <div class="contiainer">
    <h1>Car show page</h1>
    <h2>Name of Car</h2>
    <div class="image">
      <img src="https://images.unsplash.com/photo-1506015391300-4802dc74de2e?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8amVlcHxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=700&q=60" alt=" This is an image of your car">
    </div>
      <%# progress bar container %>

    <%# progress bar container %>
      <div data-controller="progress" data-progress-percent-value="80" class="bg-violet-200 rounded-full w-full p-1">
        <div data-progress-target="bar"
              class="bg-violet-500 rounded-full h-2 transition-all ease-in-out"
              style="width: 0%; transition-duration: 2s;"></div>
      </div>

      <div data-controller="progress" data-progress-percent-value="40" class="bg-indigo-200 rounded-full w-full p-1">
        <div data-progress-target="bar"
              class="bg-indigo-500 rounded-full h-2 transition-all ease-in-out"
              style="width: 0%; transition-duration: 2s;"></div>
      </div>

      <div data-controller="progress" data-progress-percent-value="100" class="bg-red-200 rounded-full w-full p-1">
        <div data-progress-target="bar"
              class="bg-red-500 rounded-full h-2 transition-all ease-in-out"
              style="width: 0%; transition-duration: 2s;"></div>
      </div>

      <p>
        <button class="btn btn-secondary-outline" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
          Spark plugs and ignition
        </button>
      </p>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.
        </div>
      </div>
    </div>

      <div>
        <h3 class="text-lg font-medium leading-6 text-gray-900">Last 30 days</h3>

        <div class="mt-5 grid grid-cols-1 gap-3 sm:grid-cols-2 lg:grid-cols-3">
          <% 3.times do %>
            <%# CARD %>
            <div class="relative overflow-hidden rounded-lg bg-white p-4 shadow space-y-2">
              <div class="flex">
                <div class="rounded-full bg-indigo-500 text-white w-8 h-8 flex items-center justify-center flex-shrink-0 mr-4">
                  <!-- Heroicon name: outline/users -->
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">

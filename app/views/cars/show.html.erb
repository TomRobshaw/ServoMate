      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="d-flex align-content-start flex-wrap">
        <%= f.input :kilometers %>
        <%= f.submit class:"btn btn-primary text-white mt-4 rounded"%>
      </div>
      <% end %>
    </div>


          <% else %>
            <%= @tyres_percentage %>
          <% end %>">
            <div data-progress-target="bar"
                  class="bg-blue-500 rounded-full h-2 transition-all ease-in-out"
                  style="width: 0%; transition-duration: 2s;"></div>
          </div>
        </div>


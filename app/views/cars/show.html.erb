<div class="container">
    <div class="d-flex inline justify-content-between"><h1><%= @car.make %></h1><h3 class="mt-1"><%= @car.model%></h3><h3 class="mt-1"><%= @car.year%></h3>
    </div>
    <div class="image">
      <%= cl_image_tag @car.image.key, crop: :fill, class:"card-img-top" %>
    </div>


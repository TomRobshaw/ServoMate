                    <path d="M4.462 19.462c.42-.419.753-.89 1-1.394.453.213.902.434 1.347.661a6.743 6.743 0 01-1.286 1.794.75.75 0 11-1.06-1.06z" />
                  </svg>
                </div>
                <div class="flex-grow-1 space-y-2">
                  <div class="flex items-center justify-between">
                  <div class="space-y-0.5">
                    <p class="text-sm text-violet-500 font-medium mb-0">Tyres</p>
                    <p class="text-2xl font-semibold text-gray-900">71,897</p>
                  </div>
                    <p class="ml-2 flex items-baseline text-sm font-semibold text-green-600">
                      <!-- Heroicon name: mini/arrow-up -->
                      <svg class="h-5 w-5 flex-shrink-0 self-center text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
                      </svg>
                      <span class="sr-only"> Increased by </span>
                      122%
                    </p>
                  </div>
                </div>
              </div>
              <div data-controller="progress" data-progress-percent-value="80" class="bg-violet-200 rounded-full w-full">
                <div data-progress-target="bar"
                      class="bg-violet-500 rounded-full h-2 transition-all ease-in-out"
                      style="width: 0%; transition-duration: 2s;"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div>
        <button class="btn btn-primary, color: blue;"><%=link_to "Home", root_path(@root)%></button>
        <button type="button" class="btn btn-primary, color: white;"><%=link_to "My Vehicles", cars_path(@cars)%></button>
        <button type="button" class="btn btn-primary, color: white;"><%=link_to "Book a Service", garages_path(@garages)%></button>
      </div>
    </div>
  </div>

</div>

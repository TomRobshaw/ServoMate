<h2>Cars Index Page</h2>

<%# <h1 class="mb-4 mt-4 d-flex justify-content-start">Listings</h1> %>

  <hr size="2px" width="100%" color="gray">
    <div class="row justify-content-between">
        <div class="col-4">
          <h3 class="mb-4"> My Cars</h3>
        </div>
          <div class="col-4 d-flex justify-content-end">
            <%= link_to "Add new car", new_car_path, class:"btn btn-primary add-list btn-md mb-4" %>
          </div>
    </div>

    <div id="cars" class="row display-flex flex-wrap-wrap">
      <% @cars.each do |car| %>
        <div class="col-md-4 mt-1">
          <div class="card">
                <div class="card-body">
                  <h4 class="card-title"><strong><%= car.make %></strong></h4>
                  <h6 class="card-subtitle mb-2 text-muted"><%= car.model %></h6>
                  <h6 class="card-subtitle mb-2 text-muted"><%= car.year %></h6>
                  <p class="card-text"> <strong><%= car.round(0) %>Kms</strong></p>
                  <%= link_to  "Car Home", car, class:"btn btn-primary" %>
                </div>
              </div>
            </div>
      <% end %>
    </div>
  </div>
